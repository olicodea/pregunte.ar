{{> header}}

<section class="mx-auto my-2 md:my-5 flex flex-col justify-center items-center px-4 pb-2 card-container">
    <div class="w-full" style="max-width: 700px;"><h4 class="texto-titulo-pagina font-bold text-3xl mb-2">Ranking</h4></div>
    <div class="w-full caja-ranking  rounded flex gap-3 justify-center items-center flex-col py-6 shadow-lg px-3 md:px-6">
        <div class="contenedor-ranking overflow-auto w-full flex flex-col gap-[10px]">
            {{#jugadores}}
                <div class="flex items-center gap-4 pb-2">
                    <p class="text-4xl md:text-5xl font-bold text-white text-shadow">{{puesto}}</p>
                    <a href="/perfil/verPerfilDeOtroUsuario&nombreUsuario={{nombreDeUsuario}}" class="partidas card-partidas flex w-full rounded-md py-2 px-4 gap-2 md:gap-6">
                        <img src="/{{fotoDePerfil}}" class="img-perfil" alt="foto-perfil">
                        <div>
                            <p class="text-white text-xl md:text-2xl font-bold">{{nombreDeUsuario}}</p>
                            <p class="text-white text-md md:text-lg"><b>Puntaje: </b>{{puntajeTotal}}</p>
                        </div>
                    </a>
                </div>
            {{/jugadores}}
        </div>
    </div>
</section>


{{> header}}
<!-- The Band Section -->
<section class="card-container mx-auto my-6 flex flex-col justify-center items-center px-4">
    {{#respuestaOK}}
        <div class="bg-blue-500 text-white py-2 px-4 rounded-md my-2 w-full">
            {{respuestaOKMessage}}
        </div>
    {{/respuestaOK}}
    {{#respuestaMAL}}
        <div class="bg-red-500 text-white py-2 px-4 rounded-md my-2 w-full">
            {{respuestaMALMessage}}
        </div>
    {{/respuestaMAL}}
    {{#jugando}}
        <div class="mb-7">
            <p class="text-5xl font-bold contador-texto">10</p>
        </div>
    {{/jugando}}

    <div class="sombra-container contenedor rounded-lg p-4 w-full pb-6">
        <div class="flex justify-center">
            <p class="medida text-white text-left text-lg md:text-2xl mb-5">¿De que color era el caballo blanco de San Martín?</p>
        </div>
        <form action="/partida/responder" method="GET" enctype="text/plain" class="flex flex-col gap-3">
            <button type="submit" name="respuesta" value="Negro" class="respuesta-bg medida mx-auto py-2 lg:py-3 rounded text-white text-lg md:text-xl w-full hover:shadow-lg hover:scale-105 hover:font-bold transition duration-100">Negro</button>
            <button type="submit" name="respuesta" value="Blanco" class="respuesta-bg medida mx-auto py-2 lg:py-3 rounded text-white text-lg md:text-xl w-full hover:shadow-lg hover:scale-105 hover:font-bold transition duration-100">Blanco</button>
            <button type="submit" name="respuesta" value="Verde" class="respuesta-bg medida mx-auto py-2 lg:py-3 rounded text-white text-lg md:text-xl w-full hover:shadow-lg hover:scale-105 hover:font-bold transition duration-100">Verde</button>
            <button type="submit" name="respuesta" value="Amarillo" class="respuesta-bg medida mx-auto py-2 lg:py-3 rounded text-white text-lg md:text-xl w-full hover:shadow-lg hover:scale-105 hover:font-bold transition duration-100">Amarillo</button>
        </form>
    </div>
    <div class="flex justify-center items-center mt-9">
        <div class="relative inline-block w-10 mr-2 align-middle select-none transition duration-500 ease-in">
            <input type="checkbox" name="toggle" id="toggle" class="toggle-checkbox absolute block w-6 h-6 rounded-full border-4 appearance-none cursor-pointer"/>
            <label for="toggle" class="toggle-label block overflow-hidden h-6 rounded-full bg-gray-400 cursor-pointer"></label>
        </div>
        <label for="toggle" class="text-md md:text-lg">Reportar pregunta</label>
    </div>
</section>
<!-- End Page Content -->

{{> footer}}
    <div class="contenedor-perfil-usuario">
        <section class="flex gap-16 justify-center items-center ">
            <div class="flex flex-col justify-center items-center">
            {{#perfil}}
                <p class="texto-izq-usuario text-white">{{nombreDeUsuario}}</p>
                <p class="texto-izq-usuario text-white">Nombre: {{nombreCompleto}}</p>

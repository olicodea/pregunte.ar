{{> header}}

<div class='flex flex-col p-6 h-full gap-8 justify-between mx-auto' style='max-width:700px' id='registroInicio'>
    <h4 class="text-2xl">Categorias Sugeridas</h4>
    <div class="w-full caja-preguntas px-3 md:px-6 rounded flex gap-3 justify-center items-center flex-col pb-6">
        <p class="texto-izq font-bold text-xl">Lista de categorias</p>
        <div class="contenedor-preguntas overflow-auto w-full flex flex-col gap-[14px]">
            {{#categorias}}
                <div id="contenedor-{{idCategoria}}" class="cursor-pointer preguntas card-partidas flex gap-1 justify-between items-center w-full rounded-md p-2 md:p-6 hover:bg-purple-700 transition duration-150">
                    <p class="text-white font-bold text-sm md:text-md w-full">{{descripcion}}</p>
                    <button onclick="mostrarModalCategoriaSugerida({{idCategoria}}, '{{descripcion}}', '{{usuario}}', {{color}})" class="sombra-container btn-purple py-1 rounded-md text-white text-center w-2/5 md:w-1/5 text-sm md:text-lg">
                        Revisar
                    </button>
                </div>
            {{/categorias}}
            {{#sinCategorias}}
                <div class="w-full flex justify-center items-center py-20">
                    {{sinCategorias}}
                </div>
            {{/sinCategorias}}
        </div>
    </div>
    <div id="modal-categorias-sugeridas" class="hidden fixed inset-0 flex items-center justify-center z-50">
        <div class="modal-overlay absolute w-full h-full bg-gray-900 opacity-50"></div>
        <div class="flex flex-col gap-8 modal-container bg-purple-800 py-3 px-5 w-11/12 md:max-w-md mx-auto rounded shadow-lg z-50 overflow-y-auto">
            <div class="modal-content flex flex-col gap-4">
                <h4 id="modal-title" class="text-xl font-bold"></h4>
                <p id="modal-category"></p>
            </div>
            <div class="modal-buttons flex justify-between">
                <button onclick="aprobarCategoria()" class="modal-button bg-green-500 flex items-center justify-center p-2 rounded-xl hover:bg-green-600 transition duration-200" >
                    <span class="material-symbols-rounded cursor-pointer">thumb_up</span>
                </button>
                <button onclick="cancelarModal('categorias-sugeridas')" class="py-1 px-4 rounded-md text-white hover:bg-purple-500 hover:shadow-lg boton-crearPartida rounded flex items-center gap-1 transition duration-100" >
                    Cerrar
                </button>
                <button onclick="rechazarCategoria()" class="modal-button bg-red-500 flex items-center justify-center p-2 rounded-xl hover:bg-red-600 transition duration-200">
                    <span class="material-symbols-rounded cursor-pointer">thumb_down</span>
                </button>
            </div>
        </div>
    </div>
</div>

{{> footer}}
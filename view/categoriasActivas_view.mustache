{{> header}}

<div class='flex flex-col p-3 md:p-6 h-full gap-8 justify-between mx-auto' style='max-width:500px' id='registroInicio'>
    <h4 class="text-2xl">Categorias Activas</h4>
    <div class="w-full caja-preguntas px-3 md:px-6 rounded flex gap-3 justify-center items-center flex-col pb-6">
        <p class="texto-izq font-bold text-xl">Lista de categorias</p>
        <div id="contenedor-categorias" class="contenedor-preguntas overflow-auto w-full flex flex-col gap-[14px]">
            {{#categoriasActivas}}
                <div class="cursor-pointer preguntas card-partidas flex gap-1 justify-between items-center w-full rounded-md p-4 md:p-4 hover:bg-purple-700 transition duration-150">
                    <p class="text-white font-bold text-sm md:text-md w-full">{{descripcion}}</p>
                    <div class="md:w-1/6 gap-1 md:gap-2 flex justify-around items-center">
                        <button data-action="editar" data-id-categoria="{{idCategoria}}" class="modal-button flex items-center justify-center p-2 md:p-2 rounded-xl text-yellow-500 hover:text-white hover:bg-yellow-600 transition duration-200">
                            <span class="material-symbols-rounded cursor-pointer icon">edit</span>
                        </button>
                        <button data-action="eliminar" data-id-categoria="{{idCategoria}}" data-descripcion="{{descripcion}}" class="modal-button flex items-center justify-center p-1 md:p-2 rounded-xl text-red-600 hover:text-white hover:bg-red-600 transition duration-200">
                            <span class="material-symbols-rounded cursor-pointer icon">delete</span>
                        </button>
                    </div>
                </div>
            {{/categoriasActivas}}
            {{#sinCategorias}}
                <div class="w-full flex justify-center items-center py-20">
                    {{sinCategorias}}
                </div>
            {{/sinCategorias}}
        </div>
    </div>
    <div id="modal-eliminar" class="hidden fixed inset-0 flex items-center justify-center z-50">
        <div class="modal-overlay absolute w-full h-full bg-gray-900 opacity-50"></div>
        <div class="flex flex-col gap-4 modal-container bg-purple-800 py-3 px-5 w-11/12 md:max-w-md mx-auto rounded shadow-lg z-50 overflow-y-auto">
            <div class="modal-content flex flex-col gap-4">
                <h4 id="modal-eliminar-title" class="text-xl font-bold">Categor√≠a a eliminar:</h4>
                <p id="modal-eliminar-category"></p>
            </div>
            <div class="modal-buttons flex justify-center gap-6">
                <button onclick="eliminarCategoria()" class="py-2 px-4 rounded-md text-white hover:bg-purple-600 hover:shadow-lg boton-crearPartida rounded flex items-center gap-1 transition duration-100" >
                    Confirmar
                </button>
                <button onclick="cancelarModal('eliminar')" class="py-2 px-4 rounded-md text-white hover:bg-red-700 hover:shadow-lg boton-cancelar bg-red-600 rounded flex items-center gap-1 transition duration-100" >
                    Cancelar
                </button>
            </div>
        </div>
    </div>
</div>
{{> footer}}
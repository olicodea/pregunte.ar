{{> header}}

<form id='DatosLogin' name="DatosLogin" action="/datosLogin/validar" method="POST" enctype="multipart/form-data" class='flex flex-col p-4 h-full mx-auto' style='max-width:500px' >
    {{#errorMsgLogin}}
        <div class="bg-red-500 text-white py-2 px-4 rounded-md my-2 w-full">
            {{errorMsgLogin}}
        </div>
    {{/errorMsgLogin}}
    <div class="flex flex-col gap-2">
        <h4 class="text-2xl mb-2">Datos de Login</h4>
        <div class="flex flex-col">
            <label for="Mail">Mail</label>
            <input type="text" name="Mail" id="Mail" class="input-type-1 bg-transparent border rounded" value="{{Mail}}">
        </div>
        <div class="flex flex-col">
            <label for="NombreUsuario">Nombre de Usuario</label>
            <input type="text" name="NombreUsuario" id="NombreUsuario" class="input-type-1 bg-transparent border rounded" value="{{NombreUsuario}}">
        </div>
        <div class="flex flex-col">
            <label for="Password">Contraseña</label>
            <div class="flex justify-between pr-4 input-type-1 bg-transparent border rounded">
                <input type="password" name="Password" placeholder="contraseña" id="Password" class="w-full input-vacio" value="{{Password}}">
                <span id="visibility" class="flex items-center material-symbols-rounded cursor-pointer">visibility_off</span>
            </div>
        </div>

        <div class="flex flex-col">
            <label for="ConfirmarPassword">Confirmar Contraseña</label>
            <div class="flex justify-between pr-4 input-type-1 bg-transparent border rounded">
                <input type="password" name="ConfirmarPassword" id="ConfirmarPassword" class="w-full input-vacio" value="{{ConfirmarPassword}}">
                <span id="visibilityConfirmar" class="flex items-center material-symbols-rounded cursor-pointer">visibility_off</span>
            </div>
        </div>
        <div class="flex flex-col">
            <label for="FotoPerfil">Foto de perfil</label>
            <input type="file" name="FotoPerfil" id="FotoPerfil" class="input-type-1 bg-transparent border rounded px-0">
        </div>
        <div class="w-full mt-4">
            <button type="submit" class="sombra-container btn-purple mx-auto py-2 rounded-md text-white text-center w-full">Continuar</button>
        </div>
    </div>
</form>
{{> footer}}
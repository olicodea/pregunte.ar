{{> header}}
<!-- The Band Section -->

    <section class="mx-auto my-10 flex flex-col justify-center items-center px-4 card-container">
        <div class="w-full rounded-lg w-full gap-6 flex justify-around">
            {{#lobbyData}}


                <div class="flex flex-col justify-center items-center gap-3">

                        <p class="texto-izq-usuario text-white font-bold text-3xl">{{nombreDeUsuario}}</p>
                        <div class="flex flex-col gap-1">

                            <p class="texto-izq-usuario text-white"><b>Puntaje:</b> {{puntaje}}</p>
                            <p class="texto-izq-usuario text-white"><b>puesto:</b> {{puesto}}</p>
                        </div>
                    </div>
            {{/lobbyData}}

            <div class="flex flex-col gap-3">
                <button class="boton-ranking rounded text-white">Ranking</button>
                <button class="boton-ranking rounded  text-white">Crear Pregunta</button>
            </div>
        </div>
        <div class="w-full contenedor-crearpartida flex justify-center items-center">
            <a href="/partida" class="text-white boton-crearPartida rounded px-6 py-2 font-bold hover:bg-purple-500 hover:shadow-lg">CREAR PARTIDA</a>
        </div>
        <div class="w-full caja-partidas rounded flex justify-center items-center flex-col">
            <p class="texto-izq">Partidas Jugadas</p>
            <div class="partidas flex justify-center items-center flex-col">
              {{#lobbyPartidasJugadas}}
                <p class="text-white">ID Partida: {{Partidas Jugadas}} &ndash;&gt; Puntaje: {{puntaje}}</p>
              {{/lobbyPartidasJugadas}}
            </div>
        </div>
    </section>

